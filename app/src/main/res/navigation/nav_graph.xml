<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.apptracking.ui.fragment.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_navigation_home_to_moreFragment"
            app:destination="@id/navigation_more" />
        <action
            android:id="@+id/action_navigation_home_to_filterDialog"
            app:destination="@id/filterDialog" />
        <action
            android:id="@+id/action_navigation_home_to_appDetailFragment"
            app:destination="@id/appDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_usage_limits"
        android:name="com.example.apptracking.ui.fragment.usagelimits.UsageLimitsFragment"
        android:label="UsageLimitsFragment"
        tools:layout="@layout/fragment_usage_limits">
        <action
            android:id="@+id/action_navigation_usage_limits_to_addUsageLimitDialog"
            app:destination="@id/addUsageLimitDialog" />
    </fragment>
    <fragment
        android:id="@+id/navigation_more"
        android:name="com.example.apptracking.ui.fragment.more.MoreFragment"
        android:label="MoreFragment" >
        <action
            android:id="@+id/action_navigation_more_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <dialog
        android:id="@+id/addUsageLimitDialog"
        android:name="com.example.apptracking.ui.dialog.AddUsageLimitDialog"
        android:label="AddUsageLimitDialog"
        tools:layout="@layout/dialog_add_usage_limit">
        <argument
            android:name="appUsageLimit"
            app:argType="com.example.apptracking.data.model.AppUsageLimit"
            app:nullable="true"
            />
    </dialog>
    <dialog
        android:id="@+id/filterDialog"
        android:name="com.example.apptracking.ui.dialog.FilterDialog"
        android:label="FilterDialog" />
    <fragment
        android:id="@+id/appDetailFragment"
        android:name="com.example.apptracking.ui.fragment.appdetail.AppDetailFragment"
        android:label="AppDetailFragment" >
        <argument
            android:name="app"
            app:argType="com.example.apptracking.data.model.App" />
    </fragment>
</navigation>