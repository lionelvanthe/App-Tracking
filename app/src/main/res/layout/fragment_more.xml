<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg_root"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:translationZ="@dimen/big_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title_controller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Total Usage"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/img_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usage"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/layout_usage"
                app:layout_constraintTop_toBottomOf="@id/layout_toolbar"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_usage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_corner_radius_10dp"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/small_margin"
                android:layout_marginTop="@dimen/normal_margin"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/tv_usage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_device_unlocks">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_usage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_s_app_usage"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_usage_content"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_usage_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1g 13p 54g"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_usage_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_device_unlocks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_corner_radius_10dp"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/small_margin"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toTopOf="@id/layout_usage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/layout_usage"
                app:layout_constraintStart_toEndOf="@id/layout_usage">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_unlocks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_s_device_unlocks"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_device_unlocks_content"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_device_unlocks_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1g 13p 54g"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_device_unlocks_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_corner_radius_10dp"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/small_margin"
                android:layout_marginTop="@dimen/normal_margin"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/layout_usage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_average">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_receive"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_notification_content"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_notification_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1g 13p 54g"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_average"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_corner_radius_10dp"
                android:paddingHorizontal="@dimen/normal_margin"
                android:paddingVertical="@dimen/small_margin"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toTopOf="@id/layout_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/layout_notification"
                app:layout_constraintStart_toEndOf="@id/layout_notification">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_average_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_average_usage"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_average_content"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_average_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1g 13p 54g"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_average_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_charts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charts"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/big_margin"
                app:layout_constraintStart_toStartOf="@id/layout_notification"
                app:layout_constraintTop_toBottomOf="@id/layout_notification"/>

            <View
                android:id="@+id/layout_chart_device_unlocks"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@drawable/bg_layout_chart"
                app:layout_constraintEnd_toEndOf="@id/layout_average"
                app:layout_constraintStart_toStartOf="@id/layout_notification"
                app:layout_constraintTop_toBottomOf="@id/tv_charts"
                app:layout_constraintBottom_toTopOf="@id/layout_hourly_breakdown"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_device_unlocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_unlocks"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/layout_chart_device_unlocks"
                app:layout_constraintEnd_toEndOf="@id/layout_chart_device_unlocks"
                app:layout_constraintTop_toTopOf="@id/layout_chart_device_unlocks"/>

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/normal_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="@id/layout_chart_device_unlocks"
                app:layout_constraintEnd_toEndOf="@id/layout_chart_device_unlocks"
                app:layout_constraintTop_toBottomOf="@id/tv_device_unlocks"
                app:layout_constraintBottom_toBottomOf="@id/layout_chart_device_unlocks">

                <com.example.apptracking.ui.custom.BarChartView
                    android:id="@+id/bar_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </HorizontalScrollView>

            <View
                android:id="@+id/layout_hourly_breakdown"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginVertical="@dimen/normal_margin"
                android:background="@drawable/bg_layout_chart"
                app:layout_constraintEnd_toEndOf="@id/layout_average"
                app:layout_constraintStart_toStartOf="@id/layout_notification"
                app:layout_constraintTop_toBottomOf="@id/layout_chart_device_unlocks"
                app:layout_constraintBottom_toTopOf="@id/layout_app_usage_breakdown"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hourly_breakdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hourly_breakdown"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/layout_hourly_breakdown"
                app:layout_constraintEnd_toEndOf="@id/layout_hourly_breakdown"
                app:layout_constraintTop_toTopOf="@id/layout_hourly_breakdown"/>

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/chart_hourly_breakdown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/small_margin"
                app:layout_constraintStart_toStartOf="@id/layout_hourly_breakdown"
                app:layout_constraintEnd_toEndOf="@id/layout_hourly_breakdown"
                app:layout_constraintTop_toBottomOf="@id/tv_hourly_breakdown"
                app:layout_constraintBottom_toBottomOf="@id/layout_hourly_breakdown"/>

            <View
                android:id="@+id/layout_app_usage_breakdown"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginVertical="@dimen/normal_margin"
                android:background="@drawable/bg_layout_chart"
                app:layout_constraintEnd_toEndOf="@id/layout_average"
                app:layout_constraintStart_toStartOf="@id/layout_notification"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_app_usage_breakdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_usage_breakdown"
                android:textColor="@color/color_text_gray"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/layout_app_usage_breakdown"
                app:layout_constraintEnd_toEndOf="@id/layout_app_usage_breakdown"
                app:layout_constraintTop_toTopOf="@id/layout_app_usage_breakdown"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart_app_usage_breakdown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/layout_app_usage_breakdown"
                app:layout_constraintEnd_toEndOf="@id/layout_app_usage_breakdown"
                app:layout_constraintTop_toBottomOf="@id/tv_app_usage_breakdown"
                app:layout_constraintBottom_toBottomOf="@id/layout_app_usage_breakdown"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</layout>
